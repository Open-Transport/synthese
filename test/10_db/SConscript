Import('s3env')

sources = s3env.Glob('*Test.cpp')
if  s3env['_WITH_MYSQL']:
    s3env.Append(LIBS = [s3env['_MYSQL_LIBRARIES']])
else:
    sources.remove('MySQLTriggerTest.cpp')

CppTestProject(
    s3env, 's3-db-test', s3env['S3VERSION'],
    source_files = sources,
    include_dir = s3env.SrcDir('#src'),
    dependencies = ['s3-db.cpplib']
)
